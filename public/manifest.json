{
  "manifest_version": 3,
  "name": "Buggy - Memo for developers",
  "version": "1.0",
  "description": "Description of your extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications"
  ],
  "commands": {
    "add-draft": { 
      "suggested_key": {
      "default": "Ctrl+B",
      "mac": "Command+B"
    },
    "description": "Add current page to draft list"}
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  }
}
